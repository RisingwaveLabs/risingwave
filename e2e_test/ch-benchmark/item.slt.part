CREATE MATERIALIZED SOURCE item (
    i_id INTEGER,
    i_im_id INTEGER,
    i_name VARCHAR,
    i_price REAL,
    i_data VARCHAR,
    PRIMARY KEY (i_id)
) with (
    connector = 'kafka',
    topic = 'postgres.public.item',
    properties.bootstrap.server = '127.0.0.1:29092',
    scan.startup.mode = 'earliest'
) ROW FORMAT DEBEZIUM_JSON;
